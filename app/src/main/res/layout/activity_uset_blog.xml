<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uset_blog">


    <Button
        android:id="@+id/donate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fragment_container"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bgcard_home_menu"
        android:text="Podpořit aplikaci"
        android:textColor="@color/white"
        android:visibility="invisible" />


    <Button
        android:id="@+id/kontakt_a_podpora_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/lista_profil"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:paddingLeft="25dp"
        android:text="Kontakt a podpora"

        android:textAlignment="textStart"
        android:textSize="14dp" />

    <Button
        android:id="@+id/o_aplikaci_button"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/kontakt_a_podpora_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/selectableItemBackground"
        style="?android:attr/borderlessButtonStyle"
        android:textAlignment="textStart"
        android:textSize="14dp"
        android:paddingLeft="25dp"
        android:text="O aplikaci" />

    <Button
        android:id="@+id/odhlasit_se_button"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/o_aplikaci_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/selectableItemBackground"
        style="?android:attr/borderlessButtonStyle"
        android:textAlignment="textStart"
        android:textSize="14dp"
        android:paddingLeft="25dp"
        android:text="Odhlásit se" />

    <LinearLayout
        android:id="@+id/lista_profil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgcard_home"
        android:orientation="vertical"
        android:padding="73dp"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="0dp">

    </LinearLayout>

    <TextView
        android:id="@+id/user_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/lexon"
        android:text="Profil uživatele"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textIsSelectable="false"
        android:textSize="25dp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/user_name_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="65dp"
        android:text="Jméno a příjmení"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="normal" />
    <TextView
        android:id="@+id/user_number_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="95dp"
        android:text="00000000"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:typeface="normal" />



    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation">

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:labelVisibilityMode="unlabeled"
        android:foregroundTint="@color/white"
        app:itemBackground="@drawable/menu_back_color"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/menu_color"
        app:menu="@menu/bottom_navigation"
        android:layout_margin="20dp"/>

</RelativeLayout>

