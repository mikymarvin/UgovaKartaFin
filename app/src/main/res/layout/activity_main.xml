<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgone"
    android:orientation="horizontal"
    tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bgcard"
            android:orientation="vertical"
            android:padding="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="78dp"
                android:layout_centerInParent="true"
                android:src="@drawable/logougo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/lexon"
                android:text="UŽ JSI UGO FANDA?"
                android:textColor="#ffffff"
                android:textSize="25dp" />



            <EditText
                android:id="@+id/regName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/bgedittext"
                android:hint="Celé jméno"
                android:paddingLeft="18dp"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/ugoId"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/bgedittext"
                android:hint="Číslo UGO karty"
                android:inputType="number"
                android:paddingLeft="18dp"
                android:maxLength="8"/>

            <EditText
                android:id="@+id/regMail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/bgedittext"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:paddingLeft="18dp" />


            <EditText
                android:id="@+id/regPass"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/bgedittext"
                android:hint="Heslo"
                android:inputType="textPassword"
                android:paddingLeft="18dp" />

            <EditText
                android:id="@+id/regPass2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/bgedittext"
                android:hint="Heslo znovu"
                android:inputType="textPassword"
                android:paddingLeft="18dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/lexon"
                android:layout_marginTop="10dp"
                android:text="REGISTRACÍ SOUHLASÍTE SE ZPRACOVÁNÍM OSOBNÍCH ÚDAJŮ"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <Button
                android:id="@+id/regBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/lexon"
                android:background="@drawable/bg_btn"
                android:text="Registrovat se"
                android:textColor="#FFFFFF"
                android:textSize="22dp"
                app:layout_constraintBottom_toTopOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText2" />
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/lexon"
                    android:text="MÁTE JIŽ ÚČET? PŘIHLASTE SE ZDE!"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
